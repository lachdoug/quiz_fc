<%= banner "News" %>

<div class="container">

  <div class="clearfix">
    <%= link_to fa("arrow-up"), member_path( @member ), class: "btn btn-outline-primary btn-app float-right" %>
  </div>

  <h4><%= @news_post.title %></h4>
  <p>
    <%= time_ago_in_words @news_post.updated_at, vague: true %> ago
  </p>
  <hr>
  <p><%= markdown( @news_post.body ) %></p>


</div>
