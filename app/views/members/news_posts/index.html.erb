<%= banner("QuizFC News") %>

<div class="container">

  <div class="clearfix">
    <%= link_to fa("arrow-up"), member_path( @member ), class: "btn btn-outline-primary btn-app float-right" %>
  </div>

  <div class="row">

    <% @news_posts.each do |post| %>
      <div class="col-md-6 mb-4">
        <div class="card">
          <div class="card-body">
            <div class="float-right"></div>
            <h5><%= post.title %></h5>
            <hr>
            <p>
              <%= time_ago_in_words post.updated_at, vague: true %> ago.
            </p>
            <p><%= link_to "Read News Post", member_news_post_path( member_id: @member.id, id: post.id ) %></p>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>
