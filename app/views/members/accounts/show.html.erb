<%= banner("Transaction History") %>

<div class="container">

  <div class="clearfix">
    <%= link_to fa('arrow-up'), profile_path, class: "btn btn-outline-primary btn-app float-right" %>
  </div>

  <p>
    <strong>Balance</strong>
    <%= number_to_currency( @account.balance, unit: "Q$" ) %>
  </p>

  <% if @account.transactions.any? %>
    <table class="table">
      <tr>
        <th>Date</th>
        <th>Amount</th>
        <th>Comment</th>
        <th></th>
      </tr>
      <%= render(
        collection: @account.transactions,
        partial: 'accounts/transaction' ) %>
    </table>
  <% else %>
     None
  <% end %>

</div>
