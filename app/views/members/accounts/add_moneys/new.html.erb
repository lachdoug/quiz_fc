<h2>Add money</h2>

<%= form_for :add_money, url: member_account_add_money_path( @member ) do |f| %>

  <div class="form-group form-group-narrow">
    <%= f.label :amount %> (<%= @member.league.currency %>)<br />

    <%= f.number_field :amount, autofocus: true, min: "10", required: :required, placeholder: "minimum is 10", class: "form-control" %>
  </div>

  <div class="form-group form-group-narrow clearfix">
    <%= link_to fa("times") + " Cancel", member_path( @member ), class: "btn btn-secondary float-left" %>
    <%= f.button type: :submit, class: "btn btn-primary float-right" do %>
      <%= fa("check") + " OK" %>
    <% end %>
  </div>

<% end %>
