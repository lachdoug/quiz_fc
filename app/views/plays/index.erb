<%= banner("Quiz History") %>

<div class="container">

  <div class="clearfix">
    <%= link_to fa('arrow-up'), profile_path, class: "btn btn-outline-primary btn-app float-right" %>
  </div>

  <p>
    <strong>Played</strong>
    <%= pluralize( @member.plays.count, "quiz" ) %>
  </p>

  <% if @plays.any? %>
    <table class="table table-hover">
      <% @plays.each do |play| %>
        <tr>
          <td><%= play.quiz %></td>
          <td><%= play.created_at.in_time_zone( play.quiz.league.timezone ).strftime("%v") %></td>
          <td><%= "Score #{ play.result[:score] } ( rank #{ play.result[:rank] } of #{ play.result[:total_plays] } )" if play.result %></td>
        </tr>
      <% end %>
    </table>

  <% end %>

</div>
