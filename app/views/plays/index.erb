<%= link_to fa('arrow-up'), profile_path, class: "btn btn-outline-primary float-right" %>

<h2><%= @member %></h2>
<h3>Play history</h3>

<p>
  <strong>Played</strong>
  <%= pluralize( @member.plays.count, "quiz" ) %>
</p>

<% if @plays.any? %>
  <table class="table table-hover">
    <tr>
      <th></th>
      <th>Quiz</th>
      <th>Play</th>
      <th>Started</th>
      <th>Result</th>
    </tr>
    <% @plays.each do |play| %>
      <tr>
        <td>
          <%= play.quiz %>
        </td>
        <td>
          <%= quiz_status_badge play.quiz %>
        </td>
        <td>
          <%= play_status_badge play %>
        </td>
        <td><%= time_ago_in_words play.created_at, vague: true %> ago</td>
        <td><%= "Score #{ play.result[:score] } ( rank #{ play.result[:rank] } of #{ play.result[:total_plays] } )" if play.result %></td>

      </tr>
    <% end %>
  </table>

<% end %>
