<div class="clearfix">

  <div class="float-left">
    <h2>Quizmaster</h2>
  </div>

  <div class="float-right">
    <%= link_to fa("file") + " Quizbooks", quizmaster_quizbooks_path, class: "btn btn-outline-primary" %>
    <%= link_to fa("award") + " Quizzes", quizmaster_quizzes_path, class: "btn btn-outline-primary" %>
  </div>

</div>

<% @leagues.each do |league| %>
<h3><%= league %></h3>
<%= render( collection: league.quizzes, partial: 'quizmasters/quiz' ) || content_tag( :p, content_tag( :i, "None" ) ) %>
<% end %>

<hr>

<div class="float-right">
  <%= link_to fa("plus") + " New quizbook", quizmaster_quizbooks_path, method: :POST, class: "btn btn-outline-primary" %>
</div>

<h3>Quizbooks</h3>
<%= render( collection: @quizbooks, partial: 'quizmasters/quizbook' ) || content_tag( :p, content_tag( :i, "None" ) ) %>
