<div class="float-right">
  <%= link_to fa("plus") + " New post",
  new_quizmaster_news_item_path,
  class: "btn btn-outline-primary" %>
  <%= link_to fa('arrow-up'), quizmaster_path, class: "btn btn-outline-primary" %>
</div>

<h1>News</h1>


<% @posts.each do |post| %>

<p>
  <div class="card">
    <div class="card-body">
      <%= button_to quizmaster_news_item_path( post ), method: :DELETE,
      class: "float-right btn btn-sm btn-outline-danger",
        data: { confirm: "Are you sure that you want to delete this news post?" } do
      %>
        <%= fa("trash") + " Delete" %>
      <% end %>
      <%= link_to fa("edit") + " Edit", edit_quizmaster_news_item_path( post ),
      class: "btn btn-sm btn-outline-primary" %>
      <br>
      <div class="float-right"><small><%= time_ago_in_words post.created_at, vague: true %> ago</small></div>
      <h3><%= post.title %></h3>
      <hr>
      <p><%= markdown( post.body ) %></p>
    </div>
  </div>
</p>
<% end %>
