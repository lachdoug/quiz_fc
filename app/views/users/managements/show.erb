<%= banner("Manage My Account") %>

<div class="container">

  <div class="clearfix mb-4">
    <%= link_to fa("arrow-up"), profile_path, class: "btn btn-outline-primary btn-app float-right" %>
  </div>

  <div class="row">
    <div class="col-md-6 mb-4">
      <div class="card">
        <div class="card-body">
          <h5>Login Details</h5>
          <hr>
          <p>
            Change your email and/or password.
          </p>
          <p>
            <%= link_to "Edit my credentials", edit_user_registration_path, class: "" %>
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-6 mb-4">
      <div class="card">
        <div class="card-body">
          <h5>Terminate Account</h5>
          <hr>
          <p>
            Unhappy. Want to leave QuizFC.
          </p>
          <p>
            <%= link_to "Terminate my account", user_termination_path %>
          </p>
        </div>
      </div>
    </div>
  </div>


</div>
