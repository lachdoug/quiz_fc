<%= banner("Contact QuizFC") %>

<div class="container">

  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <div class="form-wrapper">

        <%= form_for :contact, url: user_support_path do |f| %>

          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= f.text_field :to, readonly: :readonly,
                value: "To: support@quizfc.com",
                class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.text_field :from, readonly: :readonly,
                value: "From: #{ current_user.email }",
                class: "form-control" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.text_field :name,
                autofocus: true,
                placeholder: "Your name",
                class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= f.text_area :message,
                placeholder: "Your message",
                rows: 15,
                class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="form-buttons">
            <%= link_to "Cancel",
            profile_path,
            class: "btn btn-outline-secondary btn-app float-left" %>
            <%= f.button type: :submit,
            class: "btn btn-outline-primary btn-app float-right" do %>
              Send
            <% end %>
          </div>

        <% end %>

      </div>
    </div>
  </div>

</div>
