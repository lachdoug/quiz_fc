<%= link_to fa('arrow-up'), comptroller_accounts_path( id: @account.accountable_id ), class: "btn btn-outline-primary float-right" %>

<h2>
  <%= @account %>
</h2>

<p>
  <strong>For</strong>
  <%= @account.accountable %>
</p>

<p>
  <strong>Balance</strong>
  <%= number_to_currency( @account.balance, unit: "Q$" ) %>
</p>

<strong>Transactions</strong>
<% if @account.transactions.any? %>
  <table class="table">
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Comment</th>
      <th></th>
    </tr>
    <%= render(
      collection: @account.transactions,
      partial: 'transaction' ) %>
  </table>
<% else %>
   None
<% end %>
