<%= banner("Join up to QuizFC") %>

<div class="container">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <div class="form-wrapper">
        <div class="text-center">
          <h5>
            Join the Quiz FC Team
          </h5>
          <p>
            We Are Excited to Have You!
          </p>

        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :email_confirmation %>
                <%= f.email_field :email_confirmation, autocomplete: "email", class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <% end %>
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="form-buttons">
            <%= f.submit "Join up", class: "btn btn-outline-primary btn-app" %>
          </div>

          <div class="devise-links">
            <%= link_to( "Sign in", new_session_path(resource_name) ) %> |
            <%= link_to( "Resend confirmation", new_confirmation_path(resource_name) ) %> |
            <%= link_to( "Contact", "https://www.quizfc.com/contact-us/" ) %>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>
