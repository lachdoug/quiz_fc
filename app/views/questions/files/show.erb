<%= link_to fa("arrow-up"), question_path( @question ), class: "btn btn-outline-primary float-right" %>
<h3>File</h3>

<p><%= @file.blob.filename %></p>
<p style="overflow-x: auto">
  <% if @file.image? %>
    <%= image_tag( @file ) %>
  <% elsif @file.video? %>
    <%= video_tag( rails_blob_path( @file ), controls: true ) %>
  <% elsif @file.audio? %>
    <%= audio_tag( rails_blob_path( @file ), controls: true ) %>
  <% else %>
    <%= "File of unknown type" %>
  <% end %>
</p>
<%= link_to fa("trash") + ' Delete', question_file_path( @question, @file ), method: :DELETE, data: { confirm: "Are you sure that you want to delete this attachment?" }, class: "btn btn-outline-danger float-right" %>
