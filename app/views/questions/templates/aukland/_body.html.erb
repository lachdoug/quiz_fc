<% config = question.config || {} %>
<div class="rendered_markdown">
  <%= markdown( question.ask ) %>
  <div class="row">
    <div class="col"><%= markdown( config["left_box"] ) %></div>
    <div class="col"><%= markdown( config["centre_box"] ) %></div>
    <div class="col"><%= markdown( config["right_box"] ) %></div>
  </div>
  <%= render 'questions/partials/fields', form_type: "buttons", config: config %>
</div>
