<div class="form-group">
  <%= render '/questions/templates/default/ask_help' %>
  <%= form.label :ask %>
  <div class="markdown-editor">
    <%= form.text_area :ask %>
  </div>
</div>

<div class="form-group">
  <%= form.label :answer %>
  <%= form.text_field :answer, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :explanation %>
  <div class="markdown-editor">
    <%= form.text_area :explanation %>
  </div>
</div>

<div class="form-group">
  <%= form.label :points %>
  <%= form.number_field :points, class: "form-control" %>
</div>

<div class="form-group">
  <%= render '/questions/templates/default/config_help' %>
  <%= form.label :config_yaml, "Config" %>
  <div class="yaml-editor">
    <%= form.text_area :config_yaml %>
  </div>
</div>
