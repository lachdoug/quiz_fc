<%= form_with(model: question, local: true) do |form| %>

  <%= render "/errors", object: question %>

  <div class="form-group">
    <%= form.label :ask %>
    <div class="markdown-editor">
      <%= form.text_area :ask %>
    </div>
  </div>

  <div class="row">

    <div class="col form-group">
      <%= form.label :answer %>
      <%= form.text_field :answer, class: "form-control" %>
    </div>

    <div class="col form-group">
      <%= form.label :form_type %>
      <%= form.select :form_type, Question.form_types.map { |k,v| [ k.humanize, k ] }, {}, class: "form-control" %>
    </div>

  </div>

  <div class="form-group">
    <%= form.label :config_yaml, "Config" %>
    <div class="yaml-editor">
      <%= form.text_area :config_yaml %>
    </div>
  </div>

  <div class="form-group">
    <%= link_to :Cancel, question_path( @question ), class: "btn btn-secondary" %>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
